<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500"
            prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hyperate.hyperate4health.MainScreenController">

    <!--    Place the Title at the top in red-->
    <top>
        <Text fx:id="title" fill="#f80000" strokeType="OUTSIDE" strokeWidth="0.0" text="Main Menu"
              BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="36.0"/>
            </font>
        </Text>
    </top>

    <center>
        <LineChart fx:id="lineChart" prefHeight="400.0" prefWidth="400.0" title="Heart Monitor"
                   BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis label="Time" prefHeight="36.0" prefWidth="400.0" side="BOTTOM" tickLabelFill="#f20101"
                              fx:id="xAxis"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" autoRanging="false" forceZeroInRange="false" label="Heart Rate"
                            lowerBound="60.0" minorTickCount="2" minorTickLength="3.0" side="LEFT"
                            tickLabelFill="#ee0707" tickLabelGap="5.0" tickLength="5.0" upperBound="150.0"/>
            </yAxis>
        </LineChart>
    </center>
    <left>
        <!--        Move the label to the top of the left-->
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Label fx:id="heartRateLabel" prefHeight="17.0" prefWidth="100.0" text="Heart Rate = " textFill="#ff0000"
                   wrapText="true"/>
            <Label fx:id="name" prefHeight="17.0" prefWidth="100.0" text="Name = " textFill="#ff0000"/>

        </VBox>
    </left>
    <right>
        <Button mnemonicParsing="false" text="Save to Database" textAlignment="CENTER" textFill="#ff1e1e"
                wrapText="true" BorderPane.alignment="CENTER"/>
    </right>

    <bottom>
<!--        Add two buttons to Start and Quit-->
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonPressed" text="Start"
                    textAlignment="CENTER" textFill="#ff0000" wrapText="true"/>
            <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonPressed" text="Quit"
                    textAlignment="CENTER" textFill="#ff0000" wrapText="true"/>
        </HBox>
    </bottom>

    <!--    Set background-->
    <stylesheets>
        <URL value="@MainScreen.css"/>
    </stylesheets>

</BorderPane>
